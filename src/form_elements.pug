mixin text-input(title, hint, width)
    .text-input
        form
            h3= title
            input(type="text"
                class="text-input__input"
                style=`width:${width}`
                name= title
                placeholder= hint
            )

mixin dropdown(title, hint, width)
    .dropdown
        form
            h3= title 
            div.horizontal
                select(name="select", class="text-input__input", style=`width:${width}`, required, value= hint)
                    option(value="placeholder")= hint
                div.select-arrow expand_more

doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Form Elements
        link(rel="stylesheet", href="https://fonts.googleapis.com/icon?family=Material+Icons")
        link(rel="stylesheet", href="./styles.scss")
        link(rel="stylesheet", href="./fonts.scss")
    body
        div.form-grid
            +text-input("Text Field", "Email")
            +text-input("Text Field", "This is pretty awesome")
            +dropdown("Dropdown", "Сколько гостей")
            .horizontal
                +dropdown("Date Dropdown", "ДД.ММ.ГГГГ", "150px")
