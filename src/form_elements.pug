mixin text-input(title, hint, width)
    .text-input
        form
            h3= title
            input(type="text"
                class="text-input__input"
                style=`width:${width}`
                name= title
                placeholder= hint
            )

mixin dropdown(title, hint, width)
    .dropdown
        form
            h3= title
            div.horizontal
                select(name="select", class="text-input__input", style=`width:${width}`, required, value= hint)
                    option(value="placeholder")= hint
                div.select-arrow expand_more

mixin checkbox(text, name, checked, value)
    label.checkbox
        =text
        input(type="checkbox", id= name, name= name, checked= checked, value= value)
        //label(for= name)= text
        span.checkmark

